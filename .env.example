########################################
# Server/API configuration
########################################
# Postgres (Neon, Railway, Render, or Supabase Postgres)
POSTGRES_URL=postgres://USER:PASS@HOST:PORT/DBNAME
POSTGRES_SSL=true

# API
API_PORT=5000

########################################
# Client configuration
########################################
# Use the internal API for reads/writes
VITE_USE_API=true
VITE_API_BASE_URL=/api

########################################
# Supabase (Auth + Storage)
########################################
VITE_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_ANON_KEY

# Optional: used by API auth middleware to gate admin writes
ADMIN_EMAIL=admin@example.com
# Client-side env
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_ADMIN_EMAIL=
VITE_USE_API=false
VITE_API_BASE_URL=/api

# Serverless API env (Vercel)
POSTGRES_URL=
POSTGRES_SSL=true
PG_POOL_MAX=5
PG_IDLE_TIMEOUT=30000
# Optional: infer JWKS from Vite URL above if not set
SUPABASE_JWKS_URL=

# Optional logging
LOG_SQL=false
