{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    {
      "source": "/sitemap.xml",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!api|assets|ads\\.txt|sw\\.js|favicon\\.ico).*)",
      "destination": "/"
    }
  ]
}
