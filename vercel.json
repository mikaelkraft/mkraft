{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/sitemap.xml", "destination": "/api/index.js" },
    { "source": "/((?!api|ads\\.txt|sw\\.js|favicon\\.ico|assets/|manifest\\.json|robots\\.txt|sitemap.*\\.xml).*)", "destination": "/index.html" }
  ]
}
