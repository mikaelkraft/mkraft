#!/usr/bin/env sh
###############################################################################
# Husky v9+ commit-msg hook (no deprecated husky.sh inclusion)
# Validates commit message and suggests a scope.
###############################################################################
set -e

node scripts/verify-commit-msg.js "$1"

# Suggest scope is non-blocking
node scripts/suggest-scope.js "$1" || true

echo "âœ… commit message validated"
